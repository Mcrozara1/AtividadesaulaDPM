<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnFinalizar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtCarac"
        android:layout_width="418dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@color/design_default_color_primary"
        android:text="Quantidade de caracteres"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editResposta" />

    <TextView
        android:id="@+id/txtCabecalho"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:background="@color/design_default_color_primary_dark"
        android:text="Atividade calculadora de letras"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:verticalScrollbarPosition="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="416dp"
        android:layout_height="59dp"
        android:layout_marginBottom="12dp"
        android:background="#03A9F4"
        android:text="Finalizar"
        android:textColorHighlight="@color/white"
        android:textColorLink="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="424dp"
        android:layout_height="48dp"
        android:text="Limpar"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnFinalizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btncalcular"
        android:layout_width="424dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Calcular"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtletraA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtresposta"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Digitetexto1"
        android:layout_width="418dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/design_default_color_primary"
        android:foregroundTint="@color/white"
        android:text="Digite uma palavra ou frase!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCabecalho" />

    <EditText
        android:id="@+id/editResposta"
        android:layout_width="410dp"
        android:layout_height="76dp"
        android:ems="10"
        android:hint="Digite o texto aqui"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Digitetexto1" />

    <TextView
        android:id="@+id/txtresposta"
        android:layout_width="403dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:text="A quantidade de caracteres é:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCarac" />

    <Button
        android:id="@+id/btncalca"
        android:layout_width="160dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="40dp"
        android:text="Calcular letras A"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLimpar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtletraA" />

    <TextView
        android:id="@+id/txtletraA"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:text="A quantidade de letras A é :"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="474dp" />

</androidx.constraintlayout.widget.ConstraintLayout>